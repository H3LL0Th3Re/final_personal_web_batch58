<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Me</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="../assets/css/contact.css">
    <link rel="stylesheet" href="../assets/css/hamburger_menu.css">
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Navigation Bar -->
    <nav>
        <div class="left-nav">
            <div class="logo">
                <img src="https://media.licdn.com/dms/image/D560BAQH0uQTwn0u9RA/company-logo_200_200/0/1694505471050/dumbways_id_logo?e=2147483647&v=beta&t=pvIPWnpRc4-52xOZ_4Nt5dJtCsc6iGlNMow1sAeydhw" alt="Logo">
            </div>
        </div>
        
        <div class="contact-me" id="myLinks">
            <a href="/" class="nav_id nav-link">Home</a>
            <a href="/add-project" class="nav_id nav-link">My Projects</a>
            <a href="/contact" class="nav_id nav-link">Contact Me</a>
            <a href="/testimonial" class="nav_id nav-link">Testimonials</a>
            <a href="/register" class="nav_id nav-link">Register</a>
            <a href="/login" class="nav_id nav-link">Login</a>
        </div>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i style="color: black;" class="fa fa-bars"></i>
        </a>
    </nav>
    
    <!-- Contact Form -->
    <div class="container">
        <div class="contact-form mt-5 mb-5 p-4 rounded">
            <h1 class="text-center mb-4">GET IN TOUCH</h1>
            <form id="contactForm">
                <div class="mb-3">
                    <input id="id_input" type="text" name="name" class="form-control" placeholder="Name" required>
                </div>
                <div class="mb-3">
                    <input id="id_email" type="email" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="mb-3">
                    <input id="id_tel" type="tel" name="phone" class="form-control" placeholder="Phone Number" required>
                </div>
                <div class="mb-3">
                    <select id="id_sub" name="subject" class="form-select" required>
                        <option value="" disabled selected>Select Subject</option>
                        <option value="Fullstack">Fullstack</option>
                        <option value="Backend">Backend</option>
                        <option value="Frontend">Frontend</option>
                    </select>
                </div>
                <div class="mb-3">
                    <textarea id="id_message" name="message" class="form-control" placeholder="Your Message" rows="5" required></textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" id="submit_button" class="btn btn-dark">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script type="module" src="../assets/js/form_submit.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
    <script>
        (function(){
            emailjs.init({
                publicKey: "zt5n8xw4EvEOXZBJj"
            });
        })();

        function myFunction() {
            var x = document.getElementById("myLinks");
            if (x.style.display === "flex") {
                x.style.display = "none";
            } else {
                x.style.display = "flex";
            }
        }

        window.onload = function() {
            var links = document.querySelectorAll("#myLinks a");
            links.forEach(link => {
                if (link.href === window.location.href) {
                    link.classList.add('active');
                }
            });
        };
    </script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
